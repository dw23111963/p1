<Window x:Class="p2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Start" Content="Button" HorizontalAlignment="Left" Margin="564,54,0,0" VerticalAlignment="Top" Click="Start_Click"/>
        <Label Content="Угол" HorizontalAlignment="Left" Margin="62,54,0,0" VerticalAlignment="Top"/>
        <Label Content="Время" HorizontalAlignment="Left" Margin="62,85,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Angle" HorizontalAlignment="Left" Margin="225,64,0,0" Text="45" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Time" HorizontalAlignment="Left" Margin="225,99,0,0" Text="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Скорость" HorizontalAlignment="Left" Margin="62,116,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Speed" HorizontalAlignment="Left" Margin="225,129,0,0" Text="60" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Canvas x:Name="paint" Margin="400,79,21,51"/>
        <Label x:Name="Result" Content="Label" HorizontalAlignment="Left" Height="74" Margin="62,330,0,0" VerticalAlignment="Top" Width="268"/>
        <Label Content="Масса" HorizontalAlignment="Left" Margin="62,165,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="Mass" HorizontalAlignment="Left" Margin="226,166,0,0" Text="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="Color" HorizontalAlignment="Left" Height="110" Margin="226,191,0,0" VerticalAlignment="Top" Width="120" >
            <ListBoxItem Selected="ListBoxItem_Selected" Content="Blue"/>
            <ListBoxItem Content="Yellow"/>
            <ListBoxItem Content="Red"/>


        </ListBox>
        <ListBox x:Name="Mass1" Margin="206,306,434,14">
            <ListBoxItem Selected="ListBoxItem_Selected" Content=" 1.0"/>
            <ListBoxItem Content="0.7 "/>
            <ListBoxItem Content="1.5 "/>
        </ListBox>


    </Grid>
</Window>
